#!/bin/bash
set -o pipefail

SCREENSHOT_DIRECTORY=$HOME/Pictures/Screenshots
export SLURP_ARGS="-d -b #1d20218f -B #1d20218f -c #8ec07c -o"

case $1 in
    full)
        argument="output"
    ;;
    area)
        argument="area"
    ;;
    active)
        argument="active"
    ;;
    screen)
        argument="screen"
    ;;
    *)
        argument=$1
        if [[ -z "$argument" ]]; then
            argument="No argument"
        fi

        printf '%s\n' "\
        '$argument' is not an option.

        Arguments:
        full    - The entire screen
        area    - Area of the screen
        active  - Active window
        screens - All screens"
        exit
esac

if [[ ! -d "$SCREENSHOT_DIRECTORY" ]]; then
	mkdir -p "$SCREENSHOT_DIRECTORY"
fi


if ! grimblast --freeze copysave $argument "$SCREENSHOT_DIRECTORY/$(date +%s).png" > /dev/null ; then
    dunstify "Screenshot failed."
else
    canberra-gtk-play -i screen-capture
fi
